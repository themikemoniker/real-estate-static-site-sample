---
import Layout from '../../layouts/Layout.astro';
import { getListings, getListingById } from '../../data/listings';
import type { Listing } from '../../data/types';

export async function getStaticPaths() {
  const listings = await getListings();
  console.log(`[getStaticPaths] Got ${listings.length} listings, ids: ${listings.map(l => l.id).join(', ')}`);
  return listings.map((listing) => ({
    params: { id: listing.id },
    props: { listing },
  }));
}

interface Props {
  listing: Listing;
}

const { listing } = Astro.props;
const base = import.meta.env.BASE_URL;

const formatPrice = (price: number, status: string) => {
  const formatted = new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    maximumFractionDigits: 0,
  }).format(price);
  return status === 'For Rent' ? `${formatted}/mo` : formatted;
};

const whatsappMessage = encodeURIComponent(
  `Hi! I'm interested in the property at ${listing.address}. Can you tell me more?`
);
---

<Layout title={`${listing.title} | Vallarta Luxury Living`} description={listing.description.slice(0, 160)} image={listing.images[0]}>
  <!-- Back Button -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <a
      href={`${base}#listings`}
      class="inline-flex items-center text-gray-400 hover:text-gold-500 transition-colors"
    >
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Listings
    </a>
  </div>

  <!-- Image Gallery -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
      <!-- Main Image -->
      <div class="aspect-[4/3] lg:aspect-[3/2] rounded-sm overflow-hidden cursor-pointer" data-lightbox="0">
        <img
          src={listing.images[0] || '/placeholder.jpg'}
          alt={listing.title}
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
          id="main-image"
        />
      </div>
      <!-- Secondary Images -->
      <div class="grid grid-cols-2 gap-4">
        {listing.images.slice(1, 5).map((image, index) => (
          <div class="aspect-[4/3] rounded-sm overflow-hidden cursor-pointer" data-lightbox={index + 1}>
            <img
              src={image}
              alt={`${listing.title} - Image ${index + 2}`}
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-500 gallery-thumb"
              data-src={image}
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Lightbox -->
  <div id="lightbox" class="fixed inset-0 z-50 hidden bg-dark-900/95 backdrop-blur-sm">
    <button id="lightbox-close" class="absolute top-4 right-4 text-white hover:text-gold-500 transition-colors z-10">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <button id="lightbox-prev" class="absolute left-4 top-1/2 -translate-y-1/2 text-white hover:text-gold-500 transition-colors z-10">
      <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <button id="lightbox-next" class="absolute right-4 top-1/2 -translate-y-1/2 text-white hover:text-gold-500 transition-colors z-10">
      <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>

    <div class="flex items-center justify-center h-full p-4 sm:p-16">
      <img id="lightbox-image" src="" alt="" class="max-w-full max-h-full object-contain" />
    </div>

    <div id="lightbox-counter" class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white text-sm">
      1 of 5
    </div>
  </div>

