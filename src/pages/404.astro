---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="Page Not Found | Vallarta Luxury Living" description="The page you're looking for doesn't exist.">
  <section class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="text-center max-w-lg">
      <!-- 404 Number -->
      <div class="text-8xl sm:text-9xl font-display font-bold text-gold-500 mb-4">
        404
      </div>

      <!-- Message -->
      <h1 class="text-2xl sm:text-3xl font-display font-semibold text-white mb-4">
        Page Not Found
      </h1>
      <p class="text-gray-400 mb-8">
        The property you're looking for may have been sold or the page doesn't exist.
        Let's get you back to browsing our luxury listings.
      </p>

      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={base} class="btn-primary">
          View All Properties
        </a>
        <a
          href="https://wa.me/525654121695?text=Hi%2C%20I%20need%20help%20finding%20a%20property"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
          </svg>
          Contact Agent
        </a>
      </div>
    </div>
  </section>
</Layout>
