---
import type { Listing } from '../data/types';

interface Props {
  listing: Listing;
}

const { listing } = Astro.props;

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    maximumFractionDigits: 0,
  }).format(price);
};
---

<a href={`/listing/${listing.id}`} class="card group block">
  <!-- Image -->
  <div class="relative aspect-[4/3] overflow-hidden">
    <img
      src={listing.images[0] || '/placeholder.jpg'}
      alt={listing.title}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />
    <!-- Status badge -->
    {listing.status && (
      <span class={`absolute top-3 left-3 px-3 py-1 text-xs font-semibold uppercase tracking-wide rounded-sm ${
        listing.status === 'For Sale'
          ? 'bg-gold-500 text-dark-900'
          : listing.status === 'For Rent'
          ? 'bg-blue-500 text-white'
          : 'bg-red-500 text-white'
      }`}>
        {listing.status}
      </span>
    )}
    <!-- Price overlay -->
    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-dark-900/90 to-transparent p-4">
      <span class="text-xl sm:text-2xl font-display font-bold text-gold-500">
        {formatPrice(listing.price)}
        {listing.status === 'For Rent' && <span class="text-sm text-gray-300">/mo</span>}
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-4 sm:p-5">
    <h3 class="font-display text-lg sm:text-xl font-semibold text-white mb-2 group-hover:text-gold-500 transition-colors line-clamp-1">
      {listing.title}
    </h3>

    <p class="text-gray-400 text-sm mb-4 flex items-center">
      <svg class="w-4 h-4 mr-1.5 text-gold-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <span class="truncate">{listing.address}</span>
    </p>

    <!-- Features -->
    <div class="flex items-center justify-between text-sm text-gray-400 border-t border-dark-700 pt-4">
      <div class="flex items-center space-x-1">
        <svg class="w-4 h-4 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        <span>{listing.beds} Beds</span>
      </div>
      <div class="flex items-center space-x-1">
        <svg class="w-4 h-4 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
        </svg>
        <span>{listing.baths} Baths</span>
      </div>
      <div class="flex items-center space-x-1">
        <svg class="w-4 h-4 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
        </svg>
        <span>{listing.sqft?.toLocaleString()} sqft</span>
      </div>
    </div>
  </div>
</a>

<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
