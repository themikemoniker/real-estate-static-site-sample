---
const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL;
---

<footer class="bg-dark-950 border-t border-dark-700" id="contact">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      <!-- Brand -->
      <div class="space-y-4">
        <span class="text-2xl font-display font-bold text-gold-500">
          Luxe<span class="text-white">Estates</span>
        </span>
        <p class="text-gray-400 text-sm leading-relaxed">
          Discover exceptional properties that define luxury living.
          Your dream home awaits.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
          Quick Links
        </h4>
        <ul class="space-y-3">
          <li>
            <a href={base} class="text-gray-400 hover:text-gold-500 transition-colors text-sm">
              Home
            </a>
          </li>
          <li>
            <a href={`${base}#listings`} class="text-gray-400 hover:text-gold-500 transition-colors text-sm">
              Properties
            </a>
          </li>
          <li>
            <a href={`${base}#contact`} class="text-gray-400 hover:text-gold-500 transition-colors text-sm">
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
          Get in Touch
        </h4>
        <ul class="space-y-3 text-sm text-gray-400">
          <li class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span>contact@luxeestates.com</span>
          </li>
          <li class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-gold-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
            </svg>
            <span>+52 565 412 1695</span>
          </li>
        </ul>
      </div>
    </div>

    <div class="gold-divider my-8"></div>

    <div class="text-center text-sm text-gray-500">
      <p>&copy; {currentYear} LuxeEstates. All rights reserved.</p>
    </div>
  </div>
</footer>
